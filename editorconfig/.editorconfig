; http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.txt]
insert_final_newline = false
trim_trailing_whitespace = false

[*.rb]
indent_size = 2

[*.py]
indent_size = 4

[*.js]
indent_size = 4

[*.pp]
indent_size = 2

[*.m]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8
